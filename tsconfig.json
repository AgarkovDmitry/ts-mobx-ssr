{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": ["dom", "es7"],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
